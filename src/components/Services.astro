<script>
  // Enhanced smooth scrolling and animations
  document.addEventListener('DOMContentLoaded', function() {
    // Smooth scrolling for CTA button
    const ctaButtons = document.querySelectorAll('a[href^="#"]');
    
    ctaButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const target = e.target as HTMLAnchorElement;
        const targetId = target.getAttribute('href')?.substring(1);
        const targetElement = targetId ? document.getElementById(targetId) : null;
        
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // Intersection Observer for scroll-based animations
    const observerOptions = {
      threshold: 0.2,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const element = entry.target as HTMLElement;
          
          // Add animation class based on element type
          if (element.classList.contains('service-card')) {
            element.classList.add('animate-in');
          } else if (element.closest('.text-center')) {
            element.classList.add('animate-in');
          } else if (element.closest('.mt-16')) {
            element.classList.add('animate-in');
          }
        }
      });
    }, observerOptions);

    // Observe header section
    const headerSection = document.querySelector('.text-center.mb-16') as HTMLElement;
    if (headerSection) {
      headerSection.classList.add('header-section');
      observer.observe(headerSection);
    }

    // Observe service cards
    const serviceCards = document.querySelectorAll('.service-card');
    serviceCards.forEach(card => {
      observer.observe(card);
    });
    
    // Observe CTA section
    const ctaSection = document.querySelector('.text-center.mt-16') as HTMLElement;
    if (ctaSection) {
      ctaSection.classList.add('cta-section');
      observer.observe(ctaSection);
    }
    
    // Enhanced hover effects for service cards
    serviceCards.forEach(card => {
      card.addEventListener('mouseenter', function(e) {
        const element = e.currentTarget as HTMLElement;
        element.style.transform = 'translateY(-12px) scale(1.03)';
        element.style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
        
        // Enhanced icon rotation
        const icon = element.querySelector('.w-16');
        if (icon) {
          (icon as HTMLElement).style.transform = 'scale(1.15) rotate(8deg)';
          (icon as HTMLElement).style.transition = 'all 0.3s cubic-bezier(0.4, 0, 0.2, 1)';
        }
      });
      
      card.addEventListener('mouseleave', function(e) {
        const element = e.currentTarget as HTMLElement;
        element.style.transform = 'translateY(0) scale(1)';
        
        // Reset icon
        const icon = element.querySelector('.w-16');
        if (icon) {
          (icon as HTMLElement).style.transform = 'scale(1) rotate(0deg)';
        }
      });
      
      // Enhanced focus handling
      card.addEventListener('focus', function(e) {
        const element = e.currentTarget as HTMLElement;
        element.style.transform = 'translateY(-6px) scale(1.02)';
        element.style.boxShadow = '0 25px 50px -12px rgba(0, 0, 0, 0.25)';
      });
      
      card.addEventListener('blur', function(e) {
        const element = e.currentTarget as HTMLElement;
        element.style.transform = 'translateY(0) scale(1)';
        element.style.boxShadow = '';
      });
    });
    
    // Enhanced hover effects for social proof
    const socialProofItems = document.querySelectorAll('.mt-8 .flex.items-center');
    socialProofItems.forEach(item => {
      item.addEventListener('mouseenter', function(e) {
        const element = e.currentTarget as HTMLElement;
        const svg = element.querySelector('svg');
        if (svg) {
          svg.style.transform = 'scale(1.3) rotate(5deg)';
          svg.style.transition = 'all 0.2s cubic-bezier(0.4, 0, 0.2, 1)';
        }
        element.style.transform = 'translateY(-2px)';
        element.style.transition = 'all 0.2s cubic-bezier(0.4, 0, 0.2, 1)';
      });
      
      item.addEventListener('mouseleave', function(e) {
        const element = e.currentTarget as HTMLElement;
        const svg = element.querySelector('svg');
        if (svg) {
          svg.style.transform = 'scale(1) rotate(0deg)';
        }
        element.style.transform = 'translateY(0)';
      });
    });
    
    // Smooth parallax for floating elements
    let ticking = false;
    
    function updateParallax() {
      const scrolled = window.pageYOffset;
      const parallaxElements = document.querySelectorAll('.animate-float');
      
      parallaxElements.forEach((element, index) => {
        const speed = 0.3 + (index * 0.1);
        const yPos = Math.sin(scrolled * 0.001 + index) * 10;
        (element as HTMLElement).style.transform = `translateY(${yPos}px)`;
      });
      
      ticking = false;
    }
    
    window.addEventListener('scroll', function() {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    });
    
    // Add loading state to CTA button
    const ctaButton = document.querySelector('a[href="#kontakt"]');
    if (ctaButton) {
      ctaButton.addEventListener('click', function(e) {
        const button = e.currentTarget as HTMLElement;
        button.style.transform = 'scale(0.98)';
        setTimeout(() => {
          button.style.transform = '';
        }, 150);
      });
    }
  });
</script>
