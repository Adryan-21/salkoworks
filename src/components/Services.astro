<section id="uslugi" class="py-16 lg:py-24 bg-gradient-to-br from-cream-50 via-amber-50/30 to-orange-50/20 relative overflow-hidden" aria-labelledby="uslugi-title">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-20 left-10 w-64 h-64 bg-amber-400 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-48 h-48 bg-orange-400 rounded-full blur-3xl"></div>
  </div>
  
