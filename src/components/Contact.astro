        </svg>
        <span>Wysy≈Çanie...</span>
      `;
      
      try {
        // Simulate form submission
        await new Promise(resolve => setTimeout(resolve, 2000));
        
        // Success state
        submitButton.innerHTML = `
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>Wys≈Çano!</span>
        `;
        submitButton.className = submitButton.className.replace('from-amber-600', 'from-green-600').replace('to-orange-500', 'to-green-500');
        
        // Reset form
        form.reset();
        
        // Reset button after 3 seconds
        setTimeout(() => {
          if (!submitButton) return;
          
          submitButton.disabled = false;
          submitButton.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
            <span>${originalText}</span>
          `;
          submitButton.className = submitButton.className.replace('from-green-600', 'from-amber-600').replace('to-green-500', 'to-orange-500');
        }, 3000);
        
      } catch (error) {
        console.error('Form submission error:', error);
        
        // Error state
        submitButton.innerHTML = `
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
